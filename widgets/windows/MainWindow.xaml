<Window
    x:Class="DailyLyricsWidget.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Daily Lyrics"
    Width="400"
    Height="300"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    Topmost="True"
    ResizeMode="NoResize"
    ShowInTaskbar="False">

    <Border
        Background="#F5F5F5"
        CornerRadius="16"
        Padding="20"
        BorderBrush="#E0E0E0"
        BorderThickness="1">

        <Border.Effect>
            <DropShadowEffect
                Color="Black"
                Opacity="0.1"
                ShadowDepth="2"
                BlurRadius="10"/>
        </Border.Effect>

        <Grid>
            <!-- 정상 상태: 가사 표시 -->
            <StackPanel x:Name="ContentPanel" Visibility="Visible">
                <!-- 가사 텍스트 -->
                <TextBlock
                    x:Name="LyricsText"
                    TextWrapping="Wrap"
                    FontSize="16"
                    LineHeight="24"
                    Foreground="#000000"
                    Margin="0,0,0,20">
                    익숙함에 수줍어<LineBreak/>
                    네게 하지 못한 말<LineBreak/>
                    노랫말에 가득 담아
                </TextBlock>

                <!-- 곡 정보 -->
                <StackPanel VerticalAlignment="Bottom">
                    <TextBlock
                        x:Name="TitleText"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="#666666"
                        Text="Playlist"/>

                    <TextBlock
                        x:Name="AlbumText"
                        FontSize="10"
                        Foreground="#999999"
                        Text="What Do I Call You (2020)"/>
                </StackPanel>
            </StackPanel>

            <!-- 에러 상태 -->
            <StackPanel
                x:Name="ErrorPanel"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <TextBlock
                    Text="📡"
                    FontSize="32"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"/>

                <TextBlock
                    x:Name="ErrorMessage"
                    Text="서버 연결 필요"
                    FontSize="14"
                    Foreground="#FF9800"
                    TextAlignment="Center"
                    TextWrapping="Wrap"/>

                <TextBlock
                    Text="Daily Lyrics 서버를 실행해주세요"
                    FontSize="12"
                    Foreground="#999999"
                    TextAlignment="Center"
                    Margin="0,10,0,0"
                    TextWrapping="Wrap"/>
            </StackPanel>

            <!-- 컨텍스트 메뉴 -->
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="새로고침" Click="Refresh_Click"/>
                    <Separator/>
                    <MenuItem Header="설정..." Click="Settings_Click"/>
                    <MenuItem Header="종료" Click="Exit_Click"/>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>
    </Border>
</Window>
